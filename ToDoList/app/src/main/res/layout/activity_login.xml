<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Login"
    android:background="#A2E9FC">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_Name"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txt_Password"
        android:layout_below="@+id/txt_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btn_Login"
        android:clickable="true"
        android:onClick="Click_Login"
        android:layout_below="@+id/txt_Forgot_PW"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#4BFA5A"
        android:elegantTextHeight="false"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Create Account"
        android:id="@+id/txt_CreateAcc"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:textColor="#0020C2"
        android:enabled="true"
        android:onClick="Click_CreateAcc"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot my password"
        android:id="@+id/txt_Forgot_PW"
        android:editable="false"
        android:textColor="#0020C2"
        android:enabled="true"
        android:clickable="true"
        android:layout_below="@+id/txt_Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="invisible" />

</RelativeLayout>
